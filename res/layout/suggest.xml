<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="#66ccff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="投诉建议"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageviewBack"
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:layout_alignBottom="@+id/pinglun"
            android:layout_alignParentLeft="true"
            android:src="@drawable/backxml" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tousujianyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/menu"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="34dp"
        android:text="投诉建议"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textContent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/tousujianyi"
        android:layout_centerVertical="true"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:ems="10"
        android:gravity="top"
        android:hint="请输入您的意见和建议"
        android:textSize="12dp" />

    <Button
        android:id="@+id/butsuggest"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@drawable/shape"
        android:text="确认提交" />

</RelativeLayout>